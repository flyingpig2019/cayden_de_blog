# Cayden's Growth Blog Environment Variables
# Rename this file to .env and fill in your values

# Flask Secret Key (required)
# Generate a secure random key, e.g., using: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=your_secret_key_here

# Admin Email (required)
ADMIN_EMAIL=grand.cayden@gmail.com

# TOTP Secret for Two-Factor Authentication (optional)
# Generate using: python -c "import pyotp; print(pyotp.random_base32())"
# TOTP_SECRET=your_totp_secret_here

# Session Duration in Days (optional, default: 7)
SESSION_DURATION=7